<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_machine_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sjs.vendingmachine.MachineManagerActivity"
    android:orientation="vertical"
  >

    <android.support.v7.widget.Toolbar
        android:id="@+id/machine_manager_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <ScrollView
        android:id="@+id/personal_scroll_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:paddingLeft="35dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/White" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="设备编号："
        android:textSize="22dp"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="110001"
        android:textSize="22dp"

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="560dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/White">

        <Switch
            android:id="@+id/xjsbChekButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="现金设备"
            android:textSize="22dp"

           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="560dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:background="@color/White">

        <Switch
            android:id="@+id/zfbsbCheckButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝设备"
            android:textSize="22dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="560dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/White">


        <Switch
            android:id="@+id/zfbewmCheckButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝二维码"
            android:textSize="22dp"

           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="560dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/White">


        <Switch
            android:id="@+id/ylsbCheckButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="银联设备"
            android:textSize="22dp"

             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="560dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/White">



        <Switch
            android:text="微信设备"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wxsbCheckButton"
            android:textSize="22dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="560dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/White">


        <Switch
            android:id="@+id/sfzsbCheckButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="身份证设备"
            android:textSize="22dp"

             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="560dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/White">


        <Switch
            android:id="@+id/dyjCheckButton"
            android:text="打印机"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
