<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_replenish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:background="@color/BGGray"
    tools:context="com.example.sjs.vendingmachine.ReplenishActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/rep_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.34"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.34"
            android:layout_margin="2dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_goods_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:textSize="22dp"
                android:text="商品管理"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.34"
            android:layout_margin="2dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_aisle_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:textSize="22dp"
                android:text="货道管理"/>
        </LinearLayout>
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.34"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.34"
        android:layout_margin="2dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_machine_manager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:textSize="22dp"
            android:text="设备参数"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.34"
        android:layout_margin="2dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_door_manager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:text="格子柜操作"
            android:textSize="22dp"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
